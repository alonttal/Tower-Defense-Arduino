<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TowerDefense.GameStatsView">
    <ContentView.Content>
        <Frame HasShadow="True" Padding="0">
            <StackLayout Orientation="Horizontal" VerticalOptions="Start" Padding="15">
                <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" VerticalOptions="Center" Spacing="5">
                    <Image Source="coins_icon.png" />
                    <Label Text="Coins" VerticalOptions="CenterAndExpand" />
                    <Label Text="{Binding GameStats.Coins}" WidthRequest="50" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Spacing="5">
                    <Image Source="trophy_icon.png" />
                    <Label Text="Score" VerticalOptions="CenterAndExpand" />
                    <Label Text="{Binding GameStats.Score}" WidthRequest="50" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>